{
  "git": {
    "commitMessage": "chore(mdc-syntax): release v${version}",
    "tagName": "mdc-syntax@${version}",
    "tagAnnotation": "mdc-syntax v${version}",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "mdc-syntax v${version}"
  },
  "npm": {
    "publish": true,
    "publishPath": "."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "ignoreRecommendedBump": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "Features" },
          { "type": "fix", "section": "Bug Fixes" },
          { "type": "perf", "section": "Performance" }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm run test"],
    "before:release": ["pnpm run build"]
  }
}
